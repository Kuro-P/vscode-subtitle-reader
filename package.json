{
  "name": "subtitle-reader",
  "displayName": "subtitle-reader",
  "description": "A tool for enhance the reading experience of subtitle files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ssa",
    "onLanguage:aas",
    "workspaceContains:*.(ass|ssa|srt)"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "subtitleReader.showPreviewPanel",
        "title": "Open reader panel to the side",
        "category": "Subtitle Reader",
        "icon": {
          "light": "icons/panel.svg",
          "dark": "icons/panel.svg"
        }
      },
      {
        "command": "subtitleReader.refreshPanel",
        "title": "Refresh panel",
        "category": "Subtitle Reader",
        "icon": {
          "light": "icons/refresh.svg",
          "dark": "icons/refresh.svg"
        }
      },
      {
        "command": "subtitleReader.switchPrimaryLang",
        "title": "Switch primary language style",
        "category": "Subtitle Reader",
        "icon": {
          "light": "icons/switch.svg",
          "dark": "icons/switch.svg"
        }
      },
      {
        "command": "subtitleReader.refreshCustomStyle",
        "title": "Refresh panel custom style",
        "category": "Subtitle Reader"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "subtitleReader.showPreviewPanel",
          "group": "navigation",
          "when": "resourceLangId == ass && resourceExtname == .ass || resourceLangId == srt && resourceExtname == .srt"
        },
        {
          "command": "subtitleReader.refreshPanel",
          "group": "navigation",
          "when": "activeWebviewPanelId == 'subtitlePreviewPanel'"
        },
        {
          "command": "subtitleReader.switchPrimaryLang",
          "group": "navigation",
          "when": "activeWebviewPanelId == 'subtitlePreviewPanel'"
        }
      ]
    },
    "languages": [
      {
        "id": "ass",
        "aliases": [
          "ASS",
          "SSA"
        ],
        "extensions": [
          ".ass",
          ".ssa"
        ],
        "filenames": [],
        "mimetypes": [],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/ass-icon-light.svg",
          "dark": "./icons/ass-icon-dark.svg"
        }
      },
      {
        "id": "srt",
        "aliases": [
          "SubRip",
          "SRT"
        ],
        "extensions": [
          ".srt"
        ],
        "filenames": [],
        "mimetypes": [
          "text/x-srt"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/srt-icon-light.svg",
          "dark": "./icons/srt-icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "ass",
        "scopeName": "source.ass",
        "path": "./syntaxes/ass.tmLanguage.json"
      },
      {
        "language": "srt",
        "scopeName": "source.subrip",
        "path": "./syntaxes/srt.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Subtitle Reader",
      "properties": {
        "subtitleReader.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the reader panel when an subtitle (.ass, .srt) file is opened.",
          "scope": "resource"
        },
        "subtitleReader.autoClose": {
          "type": "boolean",
          "default": false,
          "description": "Automatically close the reader panel when other file is opened.",
          "scope": "resource"
        },
        "subtitleReader.showDialogueLineNumber": {
          "type": "boolean",
          "default": true,
          "description": "Display line number of dialogues.",
          "scope": "resource"
        },
        "subtitleReader.style": {
          "type": "object",
          "description": "Custom style for the reader panel.",
          "additionalProperties": false,
          "properties": {
            "html": {
              "type": "object",
              "description": "Custom style for the html element.",
              "properties": {
                "background": {
                  "type": "string"
                },
                "background-position": {
                  "type": "string"
                },
                "background-image": {
                  "type": "string"
                },
                "background-size": {
                  "type": "string"
                },
                "background-repeat": {
                  "type": "string",
                  "enum": [
                    "space",
                    "round",
                    "repeat-y",
                    "repeat-x",
                    "repeat no-repeat",
                    "no-repeat repeat",
                    "no-repeat"
                  ]
                },
                "margin": {
                  "type": "string"
                },
                "padding": {
                  "type": "string"
                }
              }
            },
            "sectionTitle": {
              "type": "object",
              "description": "Custom style for the section title",
              "properties": {
                "color": {
                  "type": "string"
                },
                "background": {
                  "type": "string"
                }
              }
            },
            "fileName": {
              "type": "object",
              "description": "Custom style for the file name",
              "properties": {
                "color": {
                  "type": "string"
                },
                "background": {
                  "type": "string"
                }
              }
            },
            "dialogue": {
              "type": "object",
              "description": "Custom style for dialogue",
              "properties": {
                "border": {
                  "type": "string"
                },
                "background": {
                  "type": "string"
                }
              }
            },
            "lineNumber": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "font-size": {
                  "type": "string"
                },
                "border-color": {
                  "type": "string"
                },
                "border-weight": {
                  "type": "string"
                },
                "border-radius": {
                  "type": "string"
                }
              }
            },
            "timeAxis": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "font-size": {
                  "type": "string"
                }
              }
            },
            "primaryText": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "font-size": {
                  "type": "string"
                }
              }
            },
            "secondaryText": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "font-size": {
                  "type": "string"
                }
              }
            }
          },
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "yarn build-extension & yarn build-panel",
    "build-extension": "NODE_ENV=production webpack --config ./build/webpack.extension.js",
    "build-panel": "NODE_ENV=production webpack --config ./build/webpack.panel.js",
    "dev": "yarn dev-extension & yarn dev-panel",
    "dev-extension": "NODE_ENV=development webpack --config ./build/webpack.extension.js",
    "dev-panel": "NODE_ENV=development webpack serve --config ./build/webpack.panel.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "autoprefixer": "^10.4.14",
    "chalk": "4.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "handlebars": "^4.7.7",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.3.2",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^5.8.0"
  }
}
