{
  "name": "subtitle-reader",
  "displayName": "subtitle-reader",
  "description": "A tool for enhance the reading experience of subtitle files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ssa",
    "onLanguage:aas",
    "onLanguage:srt",
    "onCommand:markdown.extension.printToHtmlBatch",
    "workspaceContains:*.(ass|ssa|srt)"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "subtitleReader.helloFile",
        "title": "Hello File"
      },
      {
        "command": "subtitleReader.helloFolder",
        "title": "Hello Folder"
      },
      {
        "command": "subtitleReader.showPreviewPanel",
        "title": "Hello preview"
      }
    ],
    "languages": [
      {
        "id": "ass",
        "aliases": [
          "ASS",
          "SSA"
        ],
        "extensions": [
          ".ass",
          ".ssa"
        ],
        "filenames": [],
        "mimetypes": [],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/ass-icon.svg",
          "dark": "./icons/ass-icon.svg"
        }
      },
      {
        "id": "srt",
        "aliases": [
          "SubRip"
        ],
        "extensions": [
          ".srt"
        ],
        "filenames": [],
        "mimetypes": [
          "text/x-srt"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/srt-icon.svg",
          "dark": "./icons/srt-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "ass",
        "scopeName": "source.ass",
        "path": "./syntaxes/ass.tmLanguage.json"
      },
      {
        "language": "srt",
        "scopeName": "source.subrip",
        "path": "./syntaxes/srt.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "webpack --config ./build/common.js --mode production",
    "watch": "webpack --config ./build/common.js --mode none",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "dev": "webpack --config ./build/common.js --watch"
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "autoprefixer": "^10.4.14",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "handlebars": "^4.7.7",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.3.2",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.8",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-merge": "^5.8.0"
  }
}
