{
  "name": "subtitle-reader",
  "displayName": "subtitle-reader",
  "description": "A tool for enhance the reading experience of subtitle files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ssa",
    "onLanguage:aas",
    "onLanguage:srt",
    "onCommand:markdown.extension.printToHtmlBatch",
    "workspaceContains:*.(ass|ssa|srt)"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "subtitleReader.helloFile",
        "title": "Hello File"
      },
      {
        "command": "subtitleReader.helloFolder",
        "title": "Hello Folder"
      },
      {
        "command": "subtitleReader.showPreviewPanel",
        "title": "Hello preview"
      }
    ],
    "languages": [
      {
        "id": "ass",
        "aliases": [
          "ASS",
          "SSA"
        ],
        "extensions": [
          ".ass",
          ".ssa"
        ],
        "filenames": [],
        "mimetypes": [],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/ass-icon.svg",
          "dark": "./icons/ass-icon.svg"
        }
      },
      {
        "id": "srt",
        "aliases": [
          "SubRip"
        ],
        "extensions": [
          ".srt"
        ],
        "filenames": [],
        "mimetypes": [
          "text/x-srt"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/srt-icon.svg",
          "dark": "./icons/srt-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "ass",
        "scopeName": "source.ass",
        "path": "./syntaxes/ass.tmLanguage.json"
      },
      {
        "language": "srt",
        "scopeName": "source.subrip",
        "path": "./syntaxes/srt.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Subtitle Reader",
      "properties": {
        "subtitleReader.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the reader panel when an subtitle (.ass, .srt) file is opened.",
          "scope": "resource"
        },
        "subtitleReader.autoClose": {
          "type": "boolean",
          "default": true,
          "description": "Automatically close the reader panel when this subtitle files is closed.",
          "scope": "resource"
        },
        "subtitleReader.style": {
          "type": "object",
          "description": "Custom style for the reader pannel.",
          "additionalProperties": false,
          "properties": {
            "html": {
              "type": "object",
              "description": "Custom style for the html element.",
              "properties": {
                "background": {
                  "type": "string"
                },
                "background-position": {
                  "type": "string"
                },
                "background-image": {
                  "type": "string"
                },
                "background-size": {
                  "type": "string"
                },
                "background-repeat": {
                  "type": "string",
                  "enum": [
                    "space",
                    "round",
                    "repeat-y",
                    "repeat-x",
                    "repeat no-repeat",
                    "no-repeat repeat",
                    "no-repeat"
                  ]
                },
                "margin": {
                  "type": "string"
                },
                "padding": {
                  "type": "string"
                }
              }
            }
          },
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "NODE_ENV=production webpack --config ./build/webpack.config.js",
    "watch": "NODE_ENV=development webpack --config ./build/webpack.config.js",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "dev": "NODE_ENV=development webpack --config ./build/webpack.config.js --watch"
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "autoprefixer": "^10.4.14",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "handlebars": "^4.7.7",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.3.2",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-merge": "^5.8.0"
  }
}
